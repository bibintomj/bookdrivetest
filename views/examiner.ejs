<!DOCTYPE html>
<html lang="en">
    <!-- Head -->
    <%- include('layouts/general-head'); -%>
    <body>
        <!-- Header/Navbar -->
        <%- include('layouts/general-header', { 'selectedItem': 'examiner' }); -%>

        <section id="examiner-dashboard" class="dashboard">
            <div class="form-wrapper">
                <h2>Driver Test Appointments</h2>
                <br>
                <!-- Filter Section -->
                <div class="filter-section">
                    <label for="test-type-filter">Test Type</label>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <select id="test-type-filter" class="dropdown">
                        <option value="all">All</option>
                        <option value="G2">G2</option>
                        <option value="G">G</option>
                    </select>
                </div>
                <br>
                <!-- Appointments Table -->
                <div id="appointments-table-container">
                    <table id="appointments-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Test Type</th>
                                <th>Car Make</th>
                                <th>Car Model</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Rows will be dynamically populated via JS -->
                        </tbody>
                    </table>
                </div>
                <br>
                <div id="driver-details" class="details-section" style="display: none;">
                    <h3>Driver Details</h3>
                    <p><span id="driver-name"></span></p>
                    <p><strong>Car:</strong> <span id="driver-car-make"></span> <span id="driver-car-model"></span> <span id="driver-car-year"></span></p>
                    <br>
                    <textarea placeholder="Comments" class="generic-text-area" id="comments" name="comments" rows="4" cols="50"></textarea>
                    <div id="examiner-action-buttons-container">
                        <button id="fail-btn">Mark as Failed</button>
                        <button id="pass-btn">Mark as Passed</button>
                        <button id="close-details-btn">Close</button>
                    </div>
                </div>
                <br>
            </div>
        </section>

        <!-- Scripts -->
        <%- include('layouts/general-script'); -%>
        <script src="/js/examiner.js"></script>
    </body>
</html>
